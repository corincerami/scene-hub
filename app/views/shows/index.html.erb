<div class='row'>
  <div class='small-4 columns'>
    <div class='post-butto'n>
      <%= link_to("Tell us about your show", new_show_path ) %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='small-6 columns zip-code-form'>
    Find a Show by Zip Code:
    <form action='/shows' method='get'>
      <input type='text' name='zip_code' placeholder='Zip Code'>
      <input type='submit' value='Find a Show'>
    </form>
  </div>
</div>

<div class='row'>
  <div class='small-8 columns'>
    <%= paginate @shows %>

    <% @shows.each do |show| %>
      <div class='border'>
        <% show.bands.each do |band| %>
          <div>
            <a href="/bands/<%= band.id %>"><%= band.name %></a>
          </div>
        <% end %>
        <div>
          <%= link_to("#{show.venue.name}", venue_path(show.venue)) %>
        </div>
        <div>
          <%= show.details %>
        </div>
        <div>
          <%= show.datetime %>
        </div>
        <div>
          <%= link_to("Check out this show", show_path(show)) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
