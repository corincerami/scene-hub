<span>
  <a href='/shows/new'>
    <div class='post-button'>Post a new show!</div>
  </a>
</span>

<div class='zip-code-form'>
  Find a Show by Zip Code:
  <form action='/shows' method='get'>
    <input type='text' name='zip_code' placeholder='Zip Code'>
    <input type='submit' value='Find a Show'>
  </form>
</div>

<% @nearby_shows = Array.new %>
<% @shows.each do |show| %>
  <% if @user_zip && !@user_zip.empty? %>
    <% if check_distance(@user_zip, show.venue.zip_code) < 25 %>
      <% @nearby_shows << show %>
    <% end %>
  <% else %>
    <% @nearby_shows = @shows %>
  <% end %>
<% end %>

<% @nearby_shows.each do |show| %>
  <div class='border'>
    <% show.bands.each do |band| %>
      <div>
        <%= band.name %>
      </div>
    <% end %>
    <div>
      <%= show.venue.name %>
    </div>
    <div>
      <%= show.details %>
    </div>
    <div>
      <%= show.datetime %>
    </div>
  </div>
<% end %>
